<manifest version="1.0" type="device" target-level="3">
    <!--UICC secure element -->
    <hal format="hidl"><!--support SecureElement,fix JiraID DDV-4777-->
       <name>android.hardware.secure_element</name>
       <transport>hwbinder</transport>
       <version>1.0</version>
       <interface>
           <name>ISecureElement</name>
           <!--start DDV-4777 fix CtOmapiTestCases/CtsSecureElementAccessControlTestCases2 bug
                                                                                  modify by zhicai.liu 19/10 2018-->
           <instance>SIM1</instance>
           <instance>SIM2</instance>
           <!--end DDV-4777 fix CtOmapiTestCases/CtsSecureElementAccessControlTestCases2 bug
                                                                                  modify by zhicai.liu 19/10 2018-->
           <!--<instance>eSE1</instance>-->
       </interface>
    </hal><!--support SecureElement,fix JiraID DDV-4777-->
    <!-- RIL UIM REMOTE CLIENT -->
    <hal format="hidl">
        <name>android.hardware.nfc</name>
        <transport>hwbinder</transport>
        <version>1.1</version>
        <interface>
            <name>INfc</name>
            <instance>default</instance>
        </interface>
        <fqname>@1.1::INfc/default</fqname>
    </hal>
    <hal format="hidl">
        <name>vendor.sec.hardware.nfc</name>
        <transport>hwbinder</transport>
        <version>1.1</version>
        <interface>
            <name>ISecNfc</name>
            <instance>default</instance>
        </interface>
        <fqname>@1.1::ISecNfc/default</fqname>
    </hal>
    <sepolicy>
        <version>28.0</version>
    </sepolicy>
</manifest>
